<script src="@Url.Content("~/libs/bootstrap/js/bootstrap.bundle.min.js")"></script>
<script src="@Url.Content("~/libs/jquery/jquery.min.js")"></script>
<script src="@Url.Content("~/js/sidebarmenu.js")"></script>
<script src="@Url.Content("~/js/simplebar.js")"></script>
<script src="@Url.Content("~/js/app.min.js")"></script>
<script src="@Url.Content("~/js/sweetalert/sweetalert.min.js")"></script>
<script src="@Url.Content("~/js/datatables/datatables.min.js")"></script>
<script src="@Url.Content("~/js/webfont/webfont.min.js")"></script>
<script src="@Url.Content("~/js/zero.min.js")"></script>

<script>
    document.addEventListener("DOMContentLoaded", function () {
           // TempData'dan gelen mesajları JSON formatında al
           var successMessage = '@Html.Raw(Json.Serialize(TempData["SuccessMessage"]))';
           var errorMessage = '@Html.Raw(Json.Serialize(TempData["ErrorMessage"]))';

           // Success mesajı varsa ve null/boş değilse göster
           if (successMessage && successMessage.trim() !== "null" && successMessage.trim() !== '') {
               swal("Başarılı!", successMessage, "success");
           }

           // Error mesajı varsa ve null/boş değilse göster
           if (errorMessage && errorMessage.trim() !== "null" && errorMessage.trim() !== '') {
               swal("Hata!", errorMessage, "error");
           }
       });
</script>
<!-- Bootstrap Bundle should be loaded LAST -->