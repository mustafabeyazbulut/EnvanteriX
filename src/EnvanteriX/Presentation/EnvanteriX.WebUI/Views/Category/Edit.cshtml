@model UpdateCategoryViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row justify-content-center">

    <div class="col-lg-8">

        <div class="card">
            <div class="card-body">
                <h1 class="mb-4 card-title">Kategori Bilgilerini Güncelleyebilirsiniz.</h1>
                @using (Html.BeginForm("Edit", "Category", FormMethod.Post, new { @action = "/Category/Edit" }))
                {
                    <div class="row mb-3">
                        <label for="Name" class="col-sm-2 col-form-label">Kategori Adı</label>
                        <div class="col-sm-10">
                            <input type="hidden" asp-for="Id" />
                            <label class="form-control" id="Id" asp-for="Id">@Model.Id </label>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label for="Name" class="col-sm-2 col-form-label">Kategori Adı</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(model => model.Name, new { @class = "form-control", type = "text", placeholder = "Kategori Adını Girin" })
                        </div>
                    </div>

                    <div class="row mb-3 mt-4">
                        <div class="col-12 text-center">
                            <button type="submit" class="btn btn-lg btn-primary me-2">Kaydet</button>
                            <button type="button" class="btn btn-lg btn-secondary" onclick="history.back();">Geri Dön</button>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

