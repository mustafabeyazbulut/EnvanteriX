@model CreateCompanyViewModel
@{
    ViewData["Title"] = "Add";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row justify-content-center">

    <div class="col-lg-8">

        <div class="card">
            <div class="card-body">
                <h1 class="mb-4 card-title">Yeni Şirket Bilgilerini Giriniz.</h1>
                @using (Html.BeginForm("Add", "Company", FormMethod.Post))
                {
                    <div class="row mb-3">
                        <label for="Name" class="col-sm-2 col-form-label">Şirket Adı</label>
                        <div class="col-sm-10">
                            @Html.TextBox("Name", null, new { @class = "form-control", type = "text", placeholder = "Şirket Adı giriniz." })
                        </div>
                    </div>

                    <div class="row mb-3 mt-4">
                        <div class="col-12 text-center">
                            <button type="submit" class="btn btn-lg btn-primary me-2">Kaydet</button>
                            <button type="button" class="btn btn-lg btn-secondary" onclick="history.back();">Geri Dön</button>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>


